<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<style>
  body{
    background-image: url('/cart.webp');
    background-repeat: no-repeat;
    background-size: 100%;
  }
  #cart{
    backdrop-filter: blur(8px);
    border: 2px solid black;
    background: transparent;
  }
</style>
<script>
  var totalAmount = item.price;
</script>
<body>
  <div class="container mt-5" id="cart">
    <h1 class="text-center" style="color: whitesmoke;">Shopping Cart</h1>

    <% if (cartItems.length > 0) { %>
      <table class="table table-striped mt-4">
        <thead>
          <tr style="color: whitesmoke;">
            <th style="color: whitesmoke;">Item</th>
            <th style="color: whitesmoke;">Price</th>
            <th style="color: whitesmoke;">Quantity</th>
            <th style="color: whitesmoke;">Total</th>
          </tr style="color: whitesmoke;">
        </thead>
        <tbody>
          <% cartItems.forEach(item => { %>
            <tr style="color: whitesmoke;">
              <td style="color: whitesmoke;"><%= item.name %></td>
              <td style="color: whitesmoke;">Rs. <%= item.price %></td>
              <td style="color: whitesmoke;"><%= item.quantity %></td>
              <td style="color: whitesmoke;">Rs. <%= item.price  %></td>
            </tr style="color: black;">
          <% }) %>
        </tbody>
      </table>
      
      <h3 class="text-end" style="color: whitesmoke;">Total: Rs. <%= totalAmount %></h3>
    <% } else { %>
      <p class="text-center mt-4">Your cart is empty.</p>
    <% } %>

    <hr>

    <% if (cartItems.length > 0) { %>
      <h2 style="color: whitesmoke;">Checkout</h2>
      <form action="/cart/checkout" method="POST" class="mt-3">
        <div class="mb-3">
          <label for="name" class="form-label" style="color: whitesmoke;">Name</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="street" class="form-label" style="color: whitesmoke;">Street</label>
          <input type="text" id="street" name="street" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="city" class="form-label" style="color: whitesmoke;">City</label>
          <input type="text" id="city" name="city" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="postalCode" class="form-label" style="color: whitesmoke;">Postal Code</label>
          <input type="text" id="postalCode" name="postalCode" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success" style="color: whitesmoke;">Place Order</button>
        <a href="/products">Add More</a>
      </form>
    <% } %>
  </div>
</body>
</html>
